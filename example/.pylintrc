[MASTER]
load-plugins=pylint_django

ignore=wsgi.py,manage.py,migrations,settings.py

[MESSAGES CONTROL]

disable=missing-docstring,
	bad-continuation,
	indent-after-paren,
	indent-string,
	max-line-lengh,
	max-module-lines,
	too-few-public-methods,
	too-many-ancestors ,
	duplicate-code

[BASIC]

# Regular expression matching correct method names
method-rgx=(([a-z][a-z0-9_]{2,55})|(_[a-z0-9_]*))$

good-names=i,
           j,
           k,
           ex,
           Run,
		   pk,
           _

[SIMILARITIES]

ignore-comments=no

ignore-docstrings=no

ignore-imports=yes

min-similarity-lines=4

[DESIGN]

max-returns=2

